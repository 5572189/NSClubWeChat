page {
    background-color: #f4f4f4;
}

.order_waiting {
    width: 100%;
}

.order_status {
    width: 100%;
    background: #333;
}

.status_img {
    display: block;
    margin: 0 auto;
    width: 150rpx;
    height: 205rpx;
    padding: 20rpx 0;
}

.status_title {
    font-size: 30rpx;
    color: #ceb173;
    text-align: center;
    padding: 20rpx 0;
}

.status_message {
    font-size: 24rpx;
    color: #a9a9a9;
    text-align: center;
    padding-bottom: 20rpx;
}

.order_date {
    width: 640rpx;
    margin: 80rpx auto;
    border-radius: 10rpx;
    background: #fff;
}

.shop_name {
    font-size: 30rpx;
    color: #141414;
    text-align: center;
    padding: 30rpx 0;
}

.order_date .li {
    padding: 15rpx 0 20rpx 0;
    border-top: 1rpx solid #f4f4f4;
}

.li_tit {
    display: inline-block;
    font-size: 22rpx;
    color: #ceb173;
    padding: 2rpx 6rpx;
    border-radius: 10rpx;
    border: 1rpx solid #ceb173;
    margin-left: 70rpx;
}

.user_message {
    font-size: 30rpx;
    color: #a9a9a9;
    margin-left: 20rpx;
}

.check {
    margin: 20rpx auto;
    width: 640rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    background-color: #ceb173;
    padding: 30rpx 0;
    border-radius: 50rpx;
}

.room {
    display: none;
    font-size: 30rpx;
    color: #a9a9a9;
}

.note {
    display: none;
}

.showroom {
    display: inline-block;
}

.show {
    display: block;
}
.shareMessage{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
}
.shareMessage_box{
    position: absolute;
    left: 50%;
    top: 50%;
    width: 500rpx;
    height: 400rpx;
    background: #fff;
    margin-left: -250rpx;
    margin-top: -200rpx;
    border-radius: 10rpx;
    border: 5rpx solid #414141;
}
.header_hint{
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    margin-top: 60rpx;
    margin-bottom: 30rpx;
    color: #595959;
}
.conter_hint{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 30rpx;
    color: #595959;
}
.conter_hint text{
    color: #c99a7b;
}
.btn_message{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
}
.btn_message view{
    width: 50%;
    text-align: center;
    line-height: 80rpx;
}
.confirm_btn{
    font-size: 30rpx;
    color: #fff;
    background-color: #414141;
}
.share_btn button{
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    border-radius: 0;
}