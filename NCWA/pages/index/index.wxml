<!--index.wxml 首页-->
<view class='container'>
<!-- 头部banner -->
  <view class='header'>
    <view class='search'>
      <icon type="search" size="20"/><input type='text' placeholder='请输入商家名称或活动'></input>
    </view>
    <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{headerImg}}">
        <swiper-item>
          <image src="{{item.cover}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 合作商家 -->
  <view class='business-partner animated bounceOutLeft'>
    <view class='partner-title'>
      <view class='partner-title-item'>合作商家</view>
      <view class='partner-title-index'>遍布全国  一键订餐</view>
    </view>
    <view class='partner-title-time'>
        <view class='floatLeft time'>
          <view class='partner-title-month'>5月</view>
          <view class='partner-title-year'>2018</view>
        </view>
        <view class='floatLeft number'>
          <view class='partner-title-number'>08</view>
          <view class='partner-title-add'>+</view>
        </view>
    </view>
  </view>
  <!-- 合作商家滑动 -->
  <view class='list'>
    <swiper class='partner-list' current='1' indicator-dots="{{true}}" autoplay="{{false}}" previous-margin="{{'100rpx'}}" next-margin="{{'100rpx'}}"        bindchange="swiperChange">
      <block wx:for="{{headerImg}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item.cover}}" class="slide-image {{swiperIndex == index ? 'active' : ''}}"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <navigator class="more">更多</navigator>

  <!-- 主题活动 -->
    <view class='business-partner'>
    <view class='partner-title'>
      <view class='partner-title-item'>主题活动</view>
      <view class='partner-title-index'>特色主题  好吃好玩</view>
    </view>
    <view class='theme-title-time'>
        <view class='floatLeft time clock'>
          <image src='../../images/clock.png'></image>
        </view>
        <view class='floatLeft time'>
          <view class='partner-title-month'>2018</view>
          <view class='partner-title-year'>5/2-5/10</view>
        </view>
        <view class='floatLeft number'>
          <view class='partner-title-number'>3</view>
          <view class='partner-title-add'>+</view>
        </view>
    </view>
  </view>
   <view class='list'>
    <swiper class='partner-list' current='1' indicator-dots="{{true}}" autoplay="{{false}}" previous-margin="{{'100rpx'}}" next-margin="{{'100rpx'}}"        bindchange="swiperChange">
      <block wx:for="{{headerImg}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item.cover}}" class="slide-image {{swiperIndex == index ? 'active' : ''}}"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
   <navigator class="more">更多</navigator>

</view>