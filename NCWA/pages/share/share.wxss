page{
  width: 100%;
  height: 100vh;
}
.share{
  position: relative;
  width: 100%;
  height: 100vh;
}
.share_bg{
  display: block;
  width: 100%;
  height: 100%;
}

.share_box{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 690rpx;
  height: 1110rpx;
  margin-left: -345rpx;
  margin-top: -555rpx;
  background-color: #fff;
  border-radius: 4rpx;
  opacity: 0.9;
}
.share_title{
  text-align: center;
  padding: 50rpx 0  30rpx 0;
  font-size: 36rpx;
  color: #141414;
}
.share_img{
  display: block;
  width: 108rpx;
  height: 108rpx;
  margin: 30rpx auto;
  border-radius: 100%;
}
.share_shopName{
  font-size: 34rpx;
  color: #333333;
  text-align: center;
  padding-bottom: 30rpx;
}
.share_number{
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  padding-bottom: 30rpx;
}
.share_shopDetail{
  width: 230rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #ceb173;
  border-radius: 5rpx;
  margin: 0 auto 40rpx;
}
.share_message{
  width: 590rpx;
  margin: 0 auto;
  padding: 10rpx 0;
  border-top:1rpx solid #dddddd;
}
.share_message image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
  padding-top: 15rpx;
}
.share_message view{
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  padding: 15rpx 80rpx;
}