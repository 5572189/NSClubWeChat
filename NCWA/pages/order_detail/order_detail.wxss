  padding-bottom: 20rpx;
}
.order_date{
  width: 640rpx;
  margin: 80rpx auto;
  border-radius: 10rpx;
  background: #fff; 
}
.shop_name{
  font-size: 30rpx ;
  color: #141414;
  text-align: center;
  padding: 30rpx 0;
}
.order_date .li{
  padding: 15rpx 0 20rpx 0;
  border-top:1rpx solid #f4f4f4;
}
.li_tit{
  display: inline-block;
  font-size: 22rpx;
  color: #ceb173;
  padding: 2rpx 6rpx;
  border-radius: 10rpx;
