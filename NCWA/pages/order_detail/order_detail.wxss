.order_waiting{
  width: 100%;
}
.order_status{
  display: none;
  width: 100%;
  background: #333;
  padding: 30rpx 0;
}
.order_status::after{
  content: "";
  display: block;
  clear: both;
}
.order_status::before{
  content: "";
  display: block;
  clear: both;
}
.status_hint{
  float: left;
  margin-left: 30rpx;
}
.status_img{
  display: block;
  float: left;
  width: 95rpx;
  height: 95rpx;
  padding: 20rpx 0;
  margin-left: 75rpx;
}
.status_img_cancel{
  display: block;
  margin: 0 auto;
  width: 205rpx;
  height: 205rpx;
  padding: 20rpx 0;
}
.status_title_cancel{
  font-size: 30rpx;
  color: #ceb173;
  text-align: center;
  padding: 20rpx 0;
}
.status_message_cancel{
  font-size:24rpx;
  color:#a9a9a9;
  text-align: center;
  padding-bottom: 20rpx;
}
.status_title{
  font-size: 30rpx;
  color: #ceb173;
