}
.status_btn{
  display: none;
  width: 640rpx;
  margin: 0 auto;
  padding-top: 100rpx;
}
.status_btn_cancel{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.status_btn_cancel view{
  width: 295rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: #fff;
}
.status_btn_cancel .delete_order{
  background-color: #888;
}
.status_btn_cancel .other{
  background-color: #ceb173;
}
.status_btn_cancel::after{
  content: "";
  display: block;
  clear: both;
}
.status_btn_cancel::before{
  content: "";
  display: block;
  clear: both;
}
