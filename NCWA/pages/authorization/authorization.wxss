page {
    background: #f8f8f8;
}

.authorization {
    width: 100%;
}

.authorization image {
    position: relative;
    top: -500rpx; 
    display: block;
    width: 162rpx;
    height: 187rpx;
    margin: 0 auto;
    padding-top: 287rpx;
}

.title {
    position: relative;
    right: 0;
    text-align: center;
    font-size: 30rpx;
    color: #bebebe;
    padding: 5rpx 0 45rpx 0;
    padding-left: 25rpx;
    animation: mymove 3s ease;
}
@keyframes mymove{
    from {right:-100%;}
    to {right:0px;}
}
.tit{
    position: relative;
    left: -100%;
    text-align: center;
    font-size: 30rpx;
    color: #bebebe;
    padding-top: 20rpx;
}
.authorization button {
    
    display: block;
    font-size: 30rpx;
    color: #fff;
    background-color: #ceb173;
    width: 315rpx;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    
}

.message {
    text-align: center;
    font-size: 30rpx;
    color: #bebebe;
    padding-top: 350rpx;
}
